{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.letsflow.io/v1.0.0/action",
  "type": "object",
  "nullable": true,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "actor": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
              }
            ]
          }
        }
      ]
    },
    "if": {
      "$ref": "#/definitions/booleanFn"
    },
    "responseSchema": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/schema"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "update": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/updateInstruction"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/updateInstruction"
          }
        }
      ]
    }
  },
  "definitions": {
    "updateInstruction": {
      "type": "object",
      "properties": {
        "set": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
            }
          ]
        },
        "data": {},
        "mode": {
          "type": "string",
          "enum": [
            "merge",
            "replace",
            "append"
          ]
        },
        "if": {
          "$ref": "#/definitions/booleanFn"
        }
      },
      "required": [
        "set"
      ]
    },
    "booleanFn": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    }
  }
}
