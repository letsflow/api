{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.letsflow.io/v1.0.0/scenario",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schemas.letsflow.io/v1.0.0/scenario"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "actors": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/actor"
      }
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/action"
      }
    },
    "states": {
      "type": "object",
      "properties": {
        "*": {
          "$ref": "#/definitions/partialState"
        }
      },
      "patternProperties": {
        "^\\(.+\\)$": {
          "$ref": "#/definitions/endState"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/state"
      },
      "required": [
        "initial"
      ]
    },
    "vars": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/schema"
      }
    },
    "result": {
      "$ref": "https://schemas.letsflow.io/v1.0.0/schema"
    }
  },
  "required": [
    "states"
  ],
  "anyOf": [
    {
      "not": {
        "required": ["name"]
      }
    },
    {
      "required": ["name", "version"]
    }
  ],
  "definitions": {
    "state": {
      "oneOf": [
        {
          "$ref": "#/definitions/explicitState"
        },
        {
          "$ref": "#/definitions/simpleState"
        },
        {
          "$ref": "#/definitions/timeoutState"
        }
      ]
    },
    "partialState": {
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "#/definitions/explicitState"
            },
            {
              "type": "object",
              "required": []
            }
          ]
        },
        {
          "$ref": "#/definitions/simpleState"
        },
        {
          "$ref": "#/definitions/timeoutState"
        }
      ]
    },
    "explicitState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "notify": {
          "$ref": "#/definitions/notify"
        },
        "transitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/transition"
          }
        }
      },
      "required": [
        "transitions"
      ]
    },
    "simpleState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "notify": {
          "$ref": "#/definitions/notify"
        },
        "on": {
          "type": "string"
        },
        "by": {
          "$ref": "#/definitions/multiString"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "on",
        "goto"
      ]
    },
    "timeoutState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "notify": {
          "$ref": "#/definitions/notify"
        },
        "after": {
          "$ref": "#/definitions/timePeriod"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "after",
        "goto"
      ]
    },
    "endState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "notify": {
          "$ref": "#/definitions/notify"
        }
      },
      "nullable": true
    },
    "transition": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "on": {
              "type": "string"
            },
            "by": {
              "$ref": "#/definitions/multiString"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          },
          "required": [
            "on",
            "goto"
          ]
        },
        {
          "type": "object",
          "properties": {
            "after": {
              "$ref": "#/definitions/timePeriod"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "after",
            "goto"
          ]
        }
      ]
    },
    "instructions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/stringFn"
      }
    },
    "notify": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/notifyExplicit"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/definitions/notifyExplicit"
              }
            ]
          }
        }
      ]
    },
    "notifyExplicit": {
      "type": "object",
      "properties": {
        "service": {
          "type": "string"
        },
        "if": {
          "$ref": "#/definitions/booleanFn"
        },
        "after": {
          "$ref": "#/definitions/timePeriod"
        },
        "trigger": {
          "$ref": "#/definitions/stringFn"
        },
        "message": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
            },
            {
              "type": "object",
              "properties": {
                "<ref>": false,
                "<tpl>": false
              }
            }
          ]
        }
      },
      "required": [
        "service"
      ]
    },
    "stringFn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "booleanFn": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "multiString": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "timePeriod": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(\\d+)\\s*(s|second|seconds|m|minute|minutes|h|hour|hours|d|day|days|w|week|weeks)$"
        },
        {
          "type": "integer",
          "minimum": 0
        }
      ]
    }
  }
}
