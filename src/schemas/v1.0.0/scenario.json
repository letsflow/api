{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.letsflow.io/v1.0.0/scenario",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "actors": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/actor"
      }
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/action"
      }
    },
    "states": {
      "type": "object",
      "patternProperties": {
        "^\\(.+\\)$": {
          "$ref": "#/definitions/endState"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/state"
      },
      "required": [
        "initial"
      ]
    },
    "vars": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/schema"
      }
    }
  },
  "required": [
    "title",
    "actions",
    "states"
  ],
  "anyOf": [
    {
      "not": {
        "required": ["name"]
      }
    },
    {
      "required": ["name", "version"]
    }
  ],
  "definitions": {
    "actor": {
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "https://json-schema.org/draft/2020-12/schema"
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "object"
                  ]
                }
              }
            }
          ]
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/schema#object"
        },
        {
          "type": "null"
        }
      ]
    },
    "state": {
      "oneOf": [
        {
          "$ref": "#/definitions/explicitState"
        },
        {
          "$ref": "#/definitions/simpleState"
        },
        {
          "$ref": "#/definitions/timeoutState"
        }
      ]
    },
    "explicitState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "transitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/transition"
          }
        },
        "ui": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "transitions"
      ]
    },
    "simpleState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "on": {
          "type": "string"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        },
        "ui": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "on",
        "goto"
      ]
    },
    "timeoutState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "after": {
          "$ref": "#/definitions/timePeriod"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        },
        "ui": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "after",
        "goto"
      ]
    },
    "endState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        }
      },
      "nullable": true
    },
    "transition": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "on": {
              "type": "string"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "on",
            "goto"
          ]
        },
        {
          "type": "object",
          "properties": {
            "after": {
              "$ref": "#/definitions/timePeriod"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "after",
            "goto"
          ]
        }
      ]
    },
    "instructions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/stringFn"
      }
    },
    "stringFn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "booleanFn": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "timePeriod": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(\\d+)\\s*(s|second|seconds|m|minute|minutes|h|hour|hours|d|day|days|w|week|weeks)$"
        },
        {
          "type": "integer",
          "minimum": 0
        }
      ]
    }
  }
}
