{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.letsflow.io/v1.0.0/scenario",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "actors": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/objectSchema"
      }
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/action"
      }
    },
    "states": {
      "type": "object",
      "patternProperties": {
        "^\\w": {
          "$ref": "#/definitions/state"
        },
        "^\\(.+\\)$": {
          "type": "object",
          "properties": {
            "title": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
                }
              ]
            }
          }
        }
      },
      "required": [
        "initial"
      ]
    },
    "assets": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/objectSchema"
      }
    }
  },
  "required": [
    "title",
    "actions",
    "states"
  ],
  "definitions": {
    "state": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "title": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
                }
              ]
            },
            "instructions": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              ]
            },
            "transitions": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/transition"
              }
            }
          },
          "required": [
            "transitions"
          ]
        },
        {
          "type": "object",
          "properties": {
            "title": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
                }
              ]
            },
            "instructions": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              ]
            },
            "on": {
              "type": "string"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "on",
            "goto"
          ]
        }
      ]
    },
    "transition": {
      "type": "object",
      "properties": {
        "on": {
          "type": "string"
        },
        "if": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
            }
          ]
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "goto"
      ]
    },
    "objectSchema": {
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "https://json-schema.org/draft/2020-12/schema"
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "object"
                  ]
                }
              },
              "additionalProperties": true
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "boolean",
                      "integer",
                      "number",
                      "string"
                    ]
                  },
                  {
                    "$ref": "#/definitions/objectSchema"
                  }
                ]
              }
            }
          },
          "required": [
            "properties"
          ]
        }
      ]
    }
  }
}
