{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.letsflow.io/v1.0.0/scenario",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "actors": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/objectSchema"
      }
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://schemas.letsflow.io/v1.0.0/action"
      }
    },
    "states": {
      "type": "object",
      "patternProperties": {
        "^[^(]|[^)]$": {
          "$ref": "#/definitions/state"
        },
        "^\\(.+\\)$": {
          "$ref": "#/definitions/endState"
        }
      },
      "required": [
        "initial"
      ]
    },
    "assets": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/objectSchema"
      }
    }
  },
  "required": [
    "title",
    "actions",
    "states"
  ],
  "definitions": {
    "state": {
      "oneOf": [
        {
          "$ref": "#/definitions/explicitState"
        },
        {
          "$ref": "#/definitions/simpleState"
        },
        {
          "$ref": "#/definitions/timeoutState"
        }
      ]
    },
    "explicitState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "transitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/transition"
          }
        }
      },
      "required": [
        "transitions"
      ]
    },
    "simpleState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "on": {
          "type": "string"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "on",
        "goto"
      ]
    },
    "timeoutState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        },
        "instructions": {
          "$ref": "#/definitions/instructions"
        },
        "after": {
          "type": "string",
          "pattern": "^(\\d+)\\s*(s|second|seconds|m|minute|minutes|h|hour|hours|d|day|days|w|week|weeks)$"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "after",
        "goto"
      ]
    },
    "endState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/definitions/stringFn"
        }
      }
    },
    "transition": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "on": {
              "type": "string"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "on",
            "goto"
          ]
        },
        {
          "type": "object",
          "properties": {
            "after": {
              "type": "string",
              "pattern": "^(\\d+)\\s*(s|second|seconds|m|minute|minutes|h|hour|hours|d|day|days|w|week|weeks)$"
            },
            "if": {
              "$ref": "#/definitions/booleanFn"
            },
            "goto": {
              "type": "string"
            }
          },
          "required": [
            "after",
            "goto"
          ]
        }
      ]
    },
    "objectSchema": {
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "https://json-schema.org/draft/2020-12/schema"
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "object"
                  ]
                }
              },
              "additionalProperties": true
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "properties": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "boolean",
                      "integer",
                      "number",
                      "string"
                    ]
                  },
                  {
                    "$ref": "#/definitions/objectSchema"
                  }
                ]
              }
            }
          },
          "required": [
            "properties"
          ],
          "additionalProperties": false
        }
      ]
    },
    "instructions": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "stringFn": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    },
    "booleanFn": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0.0/fn"
        }
      ]
    }
  }
}
